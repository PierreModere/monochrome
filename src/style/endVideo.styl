.divVideo {
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    display: none;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: white;
    position: absolute;
    transition: opacity 0.5s ease;
    top: 0;
    background-color: rgba(0, 0, 0, 0.75);
    z-index: 4;

    .endVideo {
        width: 70%;
        height: auto;
    }

    .btnMenu {
    }
}

.backMenu {
    width: 70px;
    height: 70px;
    display:none
    position: absolute;
    z-index: 9;
    opacity: 0;
    bottom: 25px;
    right: 25px;

    img {
        width: 100%;
        height: auto;
    }
}
