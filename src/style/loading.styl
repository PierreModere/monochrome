@font-face {
  font-family: 'Basis Grotesque';
  src: url('@fonts/Basis-Grotesque-Pro-Black.ttf');
}

.loadScreen {
  position: absolute;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: 0.55s opacity ease-out;

  .start-button {
    background-color: #012FA7;
    color: #fff;
    height: 60px;
    padding: 15px 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 35px;
    outline: none;
    cursor: pointer;
    font-family: 'Basis Grotesque';
    cursor: none;
  }
}

.load {
  margin: 0 0 30px 0;
  padding: 0;
  color: #012FA7;
  font-family: 'Basis Grotesque';
  user-select: none;
}

.progressBar {
  border-radius: 8px;
  width: 300px;
  background-color: #ffffff;
}

.progress {
  border-radius: 8px;
  width: 0px;
  height: 7px;
  background-color: #012FA7;
}
