@font-face {
  font-family: 'Basis Grotesque';
  src: url('@fonts/Basis-Grotesque-Pro-Black.ttf');
}

html, body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-family: 'Basis Grotesque';
}

canvas {
  width: 100%;
  height: 100%;
  outline: none;
}

html {
  background: #000;
}

body {
  height: 3000px;
}

.link {
  display: inline-block;
}

.circle {
  position: fixed;
  background-color: #012FA7;
  width: 10px;
  height: 10px;
  left: -10px;
  top: -10px;
  border-radius: 100%;
  z-index: 1;
  // user-select: none;
  // pointer-events: none;
  z-index: 10000;
  transform: scale(1);
  // &.active {
  // opacity: 1;
  // transform: scale(0);
  // }
}

.circle-follow {
  position: fixed;
  border: 1px solid #012FA7;
  width: 30px;
  height: 30px;
  left: -21px;
  top: -21px;
  border-radius: 100%;
  z-index: 1;
  user-select: none;
  pointer-events: none;
  z-index: 10000;
  // overflow: hidden;
  transform: scale(1);
  // &.active {
  // transform: scale(3);
  // }
}